
<p>Hi - you have <%= @routes.length %> routes</p>
<script type="text/javascript" charset="utf-8">
	$(document).ready(function() {
		$('#vainroutes').dataTable({
			"bPaginate": false,
			"bLengthChange": false,
			"bFilter": true,
			"bJQueryUI": true,
			"bSort": true,
			"bInfo": false,
			"bAutoWidth": false });
	} );
</script>
<div class="routes">
	<table id="vainroutes" width="100%">
		<thead>
			<tr>
				<th>Order</th>
				<th>Verb</th>
				<th>Path</th>
				<th>Requirements</th>
			</tr>
		</thead>
		<tbody>
   			<%= render :partial => "route", :collection => @routes %>
		</tbody>
   </table>
</div>